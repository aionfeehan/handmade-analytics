{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Clang build debug",
			"command": "/usr/bin/clang++",
			"args": [
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-Wall",
				"-Wextra",
				"-pedantic",
				"-DEBUG",
				"-std=gnu++20",
				"-L/Users/aionfeehan/anaconda3/lib",
				"-lcurl",
				"-rpath ",
				"/Users/aionfeehan/anaconda3/lib",
				// "-pthread"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang++"
		},

		{
			"type": "cppbuild",
			"label": "Clang build tests debug",
			"command": "/usr/bin/clang++",
			"args": [
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-g",
				"tests.cpp",
				"-o",
				"${fileDirname}/tests",
				"-Wall",
				"-Wextra",
				"-pedantic",
				"-DEBUG",
				"-std=gnu++20"
				// "-pthread"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang++"
		},
		
		{
			"type": "cppbuild",
			"label": "Clang build release",
			"command": "/usr/bin/clang++",
			"args": [
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-g",
				"-O3",
				"-std=c++20",
				"--include-directory",
				"${workspaceFolder}/imgui/",
				"--include-directory",
				"${workspaceFolder}/imgui/backends/",
				"-L/Users/aionfeehan/anaconda3/lib",
				"-lcurl",
				"-rpath ",
				"/Users/aionfeehan/anaconda3/lib",
				// "-Rpass=loop-vectorize",
				// "-pthread"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang++"
		},

		{
			"type": "cppbuild",
			"label": "Clang build tests release fast",
			"command": "/usr/bin/clang++",
			"args": [
				"tests.cpp",
				"-o",
				"${fileDirname}/tests",
				"-g",
				"-Ofast",
				"-std=gnu++20"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang++"
		},

		{
			"type": "cppbuild",
			"label": "Clang build tests release O3",
			"command": "/usr/bin/clang++",
			"args": [
				"tests.cpp",
				"-o",
				"${workspaceFolder}/tests",
				"-g",
				"-O3",
				"-std=gnu++20"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang++"
		},

		{
			"type": "cppbuild",
			"label": "Clang build shared object",
			"command": "/usr/bin/clang++",
			"args": [
				"-fPIC",
				"-c",
				"${file}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang++"
		},

		{
			"type": "cppbuild",
			"label": "Clang build library",
			"command": "/usr/bin/clang++",
			"args": [
				"-shared",
				"-o",
				"lib${fileBasenameNoExtension}.dylib",
				"${fileBasenameNoExtension}.o"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang++",
			"dependsOn": ["Clang build shared object"]
		},

		{
			"type": "process",
			"label": "Clang build and run release",
			"command": "./${fileBasenameNoExtension}",
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": "build",
			"dependsOn": ["Clang build release"],
		},

		{
			"type": "process",
			"label": "Clang build and run test release O3",
			"command": "./tests",
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": "build",
			"dependsOn": ["Clang build test release O3"],
		},

		{
			"type": "process",
			"label": "Clang build and run tests release fast",
			"command": "./tests",
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": "build",
			"dependsOn": ["Clang build tests release fast"],
		},

		{
			"type": "process",
			"label": "Run debug build script",
			"command": "./scripts/build.sh",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},

		{
			"type": "process",
			"label": "Debug build and run tests",
			"command": "./tests",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
			},
			"dependsOn": ["Run debug build script"]
		},

		{
			"type": "process",
			"label": "Run release build script",
			"command": "./scripts/releasebuild.sh",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build"
		},

		{
			"type": "process",
			"label": "Release build and run tests",
			"command": "./tests",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
			},
			"dependsOn": ["Run release build script"]
		}
	]
}